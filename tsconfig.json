{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES6",
      "ES2018"
    ],
    "noEmitOnError": false,
    "noImplicitAny": true, // Changed to false
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types",
    "module": "commonjs", // Keep as commonjs for compatibility
    "target": "ES5", // Keep as ES5 for compatibility
    "skipLibCheck": true, // Added this critical option
    "forceConsistentCasingInFileNames": true, // Added for better errors
    "resolveJsonModule": true // Added for JSON imports
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ] // Added exclusions
}